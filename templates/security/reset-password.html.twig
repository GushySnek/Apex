{% extends 'layout/layout-main.html.twig' %}

{% form_theme form 'form/theme.html.twig' %}

{% block content %}

    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="{{ asset('assets/img/header-bg/1.jpg') }}">
        <div class="container">
            <h2>Reset Password</h2>
        </div>
    </section>
    <!-- Page top section end -->

    <section class="blog-section spad">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h4 class="text-center mb-1 text-white">Enter your email to reset your password</h4>

                    {{ form_start(form) }}

                    <div class="widget">
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="widget mt-1 text-center">
                        {{ form_widget(form.send) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock content %}