{% extends 'layout/layout-main.html.twig' %}

{% form_theme form 'form/theme.html.twig' %}

{% block content %}

    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="{{ asset('assets/img/header-bg/1.jpg') }}">
        <div class="container">
            <h2>Reset Password</h2>
        </div>
    </section>
    <!-- Page top section end -->

    <section class="blog-section spad">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">

                    {% if valid %}

                        <h4 class="text-center mb-1 text-white">Enter your new password</h4>

                        {{ form_start(form) }}

                        <div class="widget">
                            {{ form_widget(form.plainPassword) }}
                        </div>
                        <div class="widget mt-1 text-center">
                            {{ form_widget(form.save) }}
                        </div>

                        {{ form_end(form) }}

                    {% else %}

                        <h4 class="text-center mb-1 text-white">Your reset code has expired</h4>
                        <p><a href="{{ url('resetPassword') }}">You have to restart the process</a></p>

                    {% endif %}

                </div>
            </div>
        </div>
    </section>
{% endblock content %}